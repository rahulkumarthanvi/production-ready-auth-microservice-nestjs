{
  "info": {
    "name": "Auth Microservice API",
    "description": "Production-ready Auth Microservice – register, login, refresh, profile, change/forgot/reset password, admin-only.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" }
  ],
  "item": [
    {
      "name": "Public",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health",
            "description": "Liveness and readiness – MongoDB, Redis, memory."
          }
        },
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j = pm.response.json();",
                  "if (j.data && j.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', j.data.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', j.data.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecureP@ss1\",\n  \"role\": \"USER\"\n}"
            },
            "url": "{{baseUrl}}/auth/register",
            "description": "Register new user. Password: min 8 chars, upper, lower, number, special (@$!%*?&)."
          }
        },
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j = pm.response.json();",
                  "if (j.data && j.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', j.data.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', j.data.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminP@ss1\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": "{{baseUrl}}/auth/register",
            "description": "Register user with ADMIN role for testing admin-only route."
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j = pm.response.json();",
                  "if (j.data && j.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', j.data.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', j.data.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecureP@ss1\"\n}"
            },
            "url": "{{baseUrl}}/auth/login",
            "description": "Login – saves accessToken and refreshToken to collection variables."
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const j = pm.response.json();",
                  "if (j.data && j.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', j.data.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', j.data.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/refresh",
            "description": "Get new access + refresh tokens. Old refresh token is invalidated."
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": "{{baseUrl}}/auth/forgot-password",
            "description": "Returns a reset token in data.token (use in Reset Password)."
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"PASTE_TOKEN_FROM_FORGOT_PASSWORD\",\n  \"newPassword\": \"NewSecureP@ss2\"\n}"
            },
            "url": "{{baseUrl}}/auth/reset-password",
            "description": "Use token from forgot-password response."
          }
        }
      ]
    },
    {
      "name": "Protected",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/users/profile",
            "description": "Current user profile (requires login/register first)."
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/auth/logout",
            "description": "Blacklists current access token."
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"SecureP@ss1\",\n  \"newPassword\": \"NewSecureP@ss2\"\n}"
            },
            "url": "{{baseUrl}}/auth/change-password",
            "description": "Change password when authenticated."
          }
        },
        {
          "name": "Admin Only (RBAC)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/users/admin-only",
            "description": "Returns 200 only for users with role ADMIN; 403 for USER."
          }
        }
      ]
    }
  ]
}
